{
    "include": ["./src/**/*"],

    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,

        // To work with Babel
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./src/ts/types",
    }
}